<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main_container_rl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/main_description"
        android:id="@+id/tv_main_description"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_main_description"
        android:layout_centerHorizontal="true"
        android:id="@+id/container_ll_btns"
        android:layout_marginTop="35sp">

        <Button
            android:layout_width="225sp"
            android:layout_height="50sp"
            android:text="@string/spotify_streamer"
            android:id="@+id/btn_spotify_streamer"
            android:layout_gravity="center_horizontal"
            android:background="#fff08d36"
            android:layout_margin="5sp"
            android:textSize="16sp"
            android:onClick="onMainClick"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:layout_width="225sp"
            android:layout_height="50sp"
            android:text="@string/scores_app"
            android:id="@+id/btn_scores_app"
            android:layout_gravity="center_horizontal"
            android:background="#fff08d36"
            android:layout_margin="5sp"
            android:textSize="16sp"
            android:onClick="onMainClick"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:layout_width="225sp"
            android:layout_height="50sp"
            android:text="@string/library_app"
            android:id="@+id/brn_library_app"
            android:layout_gravity="center_horizontal"
            android:background="#fff08d36"
            android:layout_margin="5sp"
            android:textSize="16sp"
            android:onClick="onMainClick"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:layout_width="225sp"
            android:layout_height="50sp"
            android:text="@string/build_it_bigger"
            android:id="@+id/btn_build_it_bigger"
            android:layout_gravity="center_horizontal"
            android:background="#fff08d36"
            android:layout_margin="5sp"
            android:textSize="16sp"
            android:onClick="onMainClick"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:layout_width="225sp"
            android:layout_height="50sp"
            android:text="@string/xyz_reader"
            android:id="@+id/btn_xyz_reader"
            android:layout_gravity="center_horizontal"
            android:background="#fff08d36"
            android:layout_margin="5sp"
            android:textSize="16sp"
            android:onClick="onMainClick"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Button
            android:layout_width="225sp"
            android:layout_height="50sp"
            android:text="@string/capstone_my_own_app"
            android:id="@+id/btn_capstone_my_own_app"
            android:layout_gravity="center_horizontal"
            android:background="#ffcd103f"
            android:layout_margin="5sp"
            android:textSize="16sp"
            android:textColor="#fff"
            android:onClick="onMainClick"
            android:textAllCaps="true"
            android:textAppearance="@android:style/TextAppearance.Large" />
    </LinearLayout>
</RelativeLayout>
